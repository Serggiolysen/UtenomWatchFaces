<!--            android:gravity="end"-->
<!--            android:textColor="@color/white"/>-->

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/watch_faces_incide_recycler"/>

</LinearLayout>